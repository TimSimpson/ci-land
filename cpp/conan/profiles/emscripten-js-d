include(emscripten)

[settings]
arch=asm.js
build_type=Debug


[env]
LLVM_VERSION=8
CC=clang-8
CXX=clang++-8
CMAKE_C_COMPILER=clang-8
CMAKE_CXX_COMPILER=clang++-8
C_FLAGS= -s DISABLE_EXCEPTION_CATCHING=0 -s DEMANGLE_SUPPORT=1
CXX_FLAGS= -s DISABLE_EXCEPTION_CATCHING=0 -s DEMANGLE_SUPPORT=1
LD_FLAGS= -s DISABLE_EXCEPTION_CATCHING=0 -s DEMANGLE_SUPPORT=1
